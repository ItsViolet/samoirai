<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".psbt.PSBTActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/psbtToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signTx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="14dp"
        android:text="@string/psbt_sign_tx"
        android:textColor="@color/white"
        app:backgroundTint="@color/grey_accent"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txScroll" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <TextView
        android:id="@+id/txTitle"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:text="Unsigned Transaction "
        app:layout_constraintBottom_toTopOf="@+id/signTx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psbtToolBar"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/txScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/signTx"
        app:layout_constraintEnd_toEndOf="@+id/txTitle"
        app:layout_constraintStart_toStartOf="@+id/txTitle"
        app:layout_constraintTop_toBottomOf="@+id/txTitle"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="2dp">

            <TextView
                android:id="@+id/psbtPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="" />


        </ScrollView>

    </androidx.cardview.widget.CardView>

    <com.invertedx.hummingbird.URQRView
        android:id="@+id/qrView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signTx"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/txPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/qrView"
        app:layout_constraintStart_toStartOf="@+id/qrView"
        app:layout_constraintTop_toBottomOf="@+id/qrView"
        tools:text="" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/txShareBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Share"
        android:textColor="@color/text_primary"
        app:backgroundTint="@color/grey_accent"
        app:cornerRadius="8dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txCopy"
        app:layout_constraintEnd_toEndOf="@+id/broadCastTransactionBtn"
        app:layout_constraintStart_toStartOf="@+id/guideline42"
        app:layout_constraintTop_toTopOf="@+id/txCopy" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/txCopy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="0dp"
        android:text="Copy"
        android:textColor="@color/text_primary"
        app:backgroundTint="@color/grey_accent"
        app:cornerRadius="8dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/guideline42"
        app:layout_constraintStart_toStartOf="@+id/broadCastTransactionBtn"
        app:layout_constraintTop_toBottomOf="@+id/txPreview" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/broadcastProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/white"
        app:indicatorSize="28dp"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/broadCastTransactionBtn"
        app:layout_constraintEnd_toEndOf="@+id/broadCastTransactionBtn"
        app:layout_constraintStart_toStartOf="@+id/broadCastTransactionBtn"
        app:layout_constraintTop_toTopOf="@+id/broadCastTransactionBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/broadCastTransactionBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="0dp"
        android:padding="14dp"
        android:text="Broadcast Transaction"
        android:textColor="@color/text_primary"
        app:backgroundTint="@color/grey_accent"
        app:cornerRadius="8dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txCopy"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/psbtGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="signTx,txScroll" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/txGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="qrView,txPreview,txShareBtn,broadCastTransactionBtn,txCopy"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>